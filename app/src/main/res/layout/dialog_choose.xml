<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="@dimen/choose_dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_popup_black_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_dialog_title_height"
            android:gravity="center"
            android:textColor="@color/st_text_common_hint_white"
            android:textSize="15sp" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/divide"
            style="@style/divider"
            android:background="@color/st_bg_div_common_bottom" />

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/choose_dialog_item_height"
            android:background="@drawable/view_init_no_bg_black_color_selector"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_white"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>